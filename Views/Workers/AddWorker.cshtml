@{
    ViewData["Title"] = "AddWorker";
}


<form class="text-center" asp-action="AddWorker" asp-controller="Workers" asp-route-BranchName="@ViewBag.BranchName" method="post">
    <h2 class="h2 mb-5">Add New Worker</h2>
    <div class="row">
        <div class="col-lg-6 col-12">
            <div class="input-group mb-3">
                <div class="form-floating w-100">
                    <input class="form-control" name="workerName" type="text" placeholder="name" />
                    <label>Name</label>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-12">
            <div class="input-group mb-3">
                <div class="form-floating w-100">
                    <input class="form-control" name="salary" type="number" placeholder="Salary" />
                    <label>Salary</label>
                </div>
            </div>
        </div>
        <div class="col-lg-6 col-12">
            <div class="input-group mb-3">
                <div class="form-floating w-100">
                    <select class="form-select" name="WorkerType" id="Worker">
                        <option class="empty-option" hidden></option>
                        <option value="Chef">Chef</option>
                        <option value="Cachier">Cachier</option>
                        <option value="Receptionist">Receptionist</option>
                        <option value="Waiter">Waiter</option>
                        <label for="Worker">Type:</label>
                    </select>
                    <label for="Worker">Type</label>
                </div>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Add</button>
</form>
